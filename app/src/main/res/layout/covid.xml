<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000">

    <Button
        android:id="@+id/button"
        style="?android:borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="개인방역 6대 중요수칙"
        android:textColor="#F44336"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        style="?android:borderlessButtonStyle"
        android:textColor="#F44336"
        android:text="코로나 주요 증상"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        style="?android:borderlessButtonStyle"
        android:textColor="#F44336"
        android:text="격리해제와 해제 후 주의사항"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        style="?android:borderlessButtonStyle"
        android:textColor="#F44336"
        android:text="코로나 유증상 시 행동 수칙"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        style="?android:borderlessButtonStyle"
        android:textColor="#F44336"
        android:text="자가격리대상자 생활수칙"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        style="?android:borderlessButtonStyle"
        android:textColor="#F44336"
        android:text="확진 후 외출가능 범위, 주의사항"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        style="?android:borderlessButtonStyle"
        android:textColor="#F44336"
        android:text="해외입국자 방역관리 안내"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        style="?android:borderlessButtonStyle"
        android:textColor="#F44336"
        android:text="자가격리 중 발생하는 생활쓰레기 처리법"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        style="?android:borderlessButtonStyle"
        android:textColor="#F44336"
        android:text="어린이 코로나 증상별 대응요령"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        style="?android:borderlessButtonStyle"
        android:textColor="#F44336"
        android:text="자가격리대상자 동거인 생활수칙"
        android:textSize="16sp" />



</LinearLayout>